<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="left"
            android:src="@mipmap/ic_launcher_foreground_medicine1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/time_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="8:00 AM"/>
            <TextView
                android:id="@+id/medicine_name_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Plaxin 200mg"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/btn_deleterem"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/ic_launcher_foreground_delete"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="40dp" />

                <Button
                    android:id="@+id/btn_snooze"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/ic_alarm_black_24dp" />

                <Button
                    android:id="@+id/btn_tick"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_done_black_24dp" />
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>






